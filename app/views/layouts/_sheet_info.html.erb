<% if @current_sheet && @current_sheet.task
		task = @current_sheet.task
-%>
  <%= start_stop_work_link(task) %>
  <%= cancel_work_link(task) %>
  <%= pause_task_link(task) %>
  <%= link_to( task.issue_name + " - " + task.project.name, :controller => 'tasks', :action => 'edit', :id => task.task_num ) %>
  <br />
  <% percent = ((task.worked_minutes + @current_sheet.duration / 60) / task.duration.to_f  * 100).round -%>
  <%= worked_nice(@current_sheet.duration/60) %> in progress, <%= worked_nice(task.worked_minutes + @current_sheet.duration / 60) %> total, <%= percent %>% done
<% end %>