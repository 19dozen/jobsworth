<div id='timer-bar'>
  <div id='task-title'>
    <h2><%= link_to(task.issue_num, edit_task_path(task.task_num)) if task.task_num %></h2>
    <span><%= "created " + time_ago_in_words(task.created_at) + " ago" unless task.created_at.nil?%></span>
  </div>
  <div id='timer-ui'>
    <a href='#'>
      <%= image_tag 'pause-18x18.png', id: 'pause-btn' %>
    </a>
    <a href='#'>
      <%= image_tag 'pause_pressed-18x18.png', id: 'play-btn' %>
    </a>
    <span id='timer-bar-elapsed' class='elapsed'>
      <span id='hours' class='timer-bar'>
        <span class="timer-val"></span>
         hours
      </span>
      <span id='minutes' class='timer-bar'>
        <span class="timer-val"></span>
         minutes
      </span>
    </end>
    <%= pin_link(@task) %>
  </div>
</div>
