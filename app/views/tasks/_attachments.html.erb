<div id="file_attachments">
<% if @task.attachments.count > 0 %>
<fieldset id="task_attachments">
  <legend>Files</legend>
  <div id="task_attached_files">
    <% for file in @task.attachments %>
    <div id="<%=file.dom_id%>">
      <% if file.thumbnail? %>
      <div class="file_thumbnail">
        <%= link_to image_tag("/project_files/thumbnail/#{file.id}"), "#file_#{file.id}", "data-toggle" => "modal" %>
        <div class="modal fade" id="file_<%= file.id %>">
          <div class="modal-header">
            <a class="close" data-dismiss="modal">Ã—</a>
            <h3><%= file.name %></h3>
          </div>
          <div class="modal-body">
            <p><%= image_tag("/project_files/download/#{file.id.to_s}.#{file.file_extension}") %></p>
          </div>
        </div>
        <span id="thumbnail_dialog_<%=file.dom_id%>" style="display:none"> <%= image_tag("/project_files/download/#{file.id}.#{file.file_extension}") %></span>
      </div>
      <% end %>
      <%= link_to h(file.name), {:controller => 'project_files', :action => 'download', :id => "#{file.id}.#{file.file_extension}"} %>
      <br/><em><%= file.created_at.strftime("#{current_user.date_format} #{current_user.time_format}") %>(<%=number_to_human_size(file.file_size) %>)</em>
      <%= link_to_function image_tag("cross_small.png", :border=>0), "remove_file_attachment(#{file.id}, '#{_("Really delete %s?", escape_javascript(file.name))}')", :class => 'close-cross' %>
      <span class="divider"></span>
    </div>
    <% end %>
  </div>
</fieldset>
<% end %>
</div>
