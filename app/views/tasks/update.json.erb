<% if @task.valid? -%>
{
    "status": "success",
    "attachments": <%= raw render(:partial => "/tasks/attachments").to_json %>,
    "history": <%= raw render(:partial => '/tasks/history').to_json %>,
    "message": <%= raw render(:partial => "/layouts/flash.html.erb", :locals => {:message => (@task.name + " - #{_('Task was successfully updated.')}")}).to_json %>
}
<% else -%>
{
    "status": "error",
    "messages": [
    <% @task.errors.full_messages.each_with_index do |m, idx| -%>
        <%= raw m.to_json %><%= "," unless idx == @task.errors.full_messages.size - 1 %>
    <% end -%>
    ]
}
<% end -%>