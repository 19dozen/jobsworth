<fieldset>
<%= "<legend>#{_ 'New Milestone' }</legend>" unless @disable_title %>

<% unless @popup.nil? %>
<% form_remote_tag :name => 'milestoneForm', :url => { :action => 'create' }, :success => "jQuery('span#ui_popup_dialog').dialog('destroy');" do %>
  <%= render :partial => 'form' %>
  <%= submit_tag _("Create"), :class => 'nolabel'%>
<% end %>
<% else %>
  <% form_tag :action => 'create' do %>
   <%= render :partial => 'form' %>
  <%= submit_tag _("Create"), :class => 'nolabel' %>
<% end %>
<% end %>
</fieldset>