<li>
  <%= hidden_field_tag "task_filter[keywords_attributes][][word]", keyword.word %>
  <%= hidden_field_tag "task_filter[keywords_attributes][][reversed]", keyword.reversed, :class => "reversed" %>
  <%=_ (keyword.reversed? ? "Have not keyword:" : "Keyword:") %>
  <%= keyword.word %>
  <span class="small"> <%= link_to_function("reverse", "reverseSearchFilter(this)") %> </span>
  <span class="right small"><%= link_to_function(image_tag("cross_small.png"), "removeSearchFilter(this)") %></span>
  &nbsp;
</li>
