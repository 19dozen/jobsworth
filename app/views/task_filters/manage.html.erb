<%= render :partial => "panel" %>
<h1>Shared Filters</h1>
<table>
<% @shared_filters.each do |tf| %>
  <tr id="tf_<%= tf.id %>">
    <td style="width:180px"><%= select_task_filter_link(tf) -%></td>
    <td class="show_filter"><%= link_to_show(tf, current_user) %></td>
    <td class="hide_filter"><%= link_to_hide(tf, current_user) %></td>
    <td>
      <% if tf.user == current_user or current_user.admin? -%>
        <td><%= link_to "Remove", "#", {:class => "action_filter"} %></td>
      <% end -%>
    </td>
  </tr>
<% end %>
</table>
<%= _"You don't have any shared filters" if @shared_filters.size == 0 %>
<h1>Own Filters</h1>
<table>
<% @private_filters.each do |tf| %>
  <tr id="tf_<%= tf.id %>">
    <td style="width:180px"><%= select_task_filter_link(tf) -%></td>
    <td class="show_filter"><%= link_to_show(tf, current_user) %></td>
    <td class="hide_filter"><%= link_to_hide(tf, current_user) %></td>
    <td>
      <% if tf.user == current_user or current_user.admin? -%>
        <td><%= link_to "Remove", "#", {:class => "action_filter"} %></td>
      <% end -%>
    </td>
  </tr>
<% end %>
</table>
<%= _"You don't have any own filters" if @private_filters.size == 0 %>
