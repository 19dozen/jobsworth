<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <%= use_tinymce %>

  <table width="100%" cellspacing="0" cellpadding="0">
  <tr><td valign="top">
  
  <!--[form:page]-->
  <label for="page_notable_id"><%= "Target (Client/User/Project)" %></label>
  <%= text_field_tag "target", @page.notable, :autocomplete => "off" %>
  <%= hidden_field "page", "notable_id" %>
  <%= hidden_field "page", "notable_type" %>
  <div id="target_auto_complete" class="auto_complete"></div>
  <br />
  
  <label for="page_name"><%=_ 'Name' %></label><%= text_field 'page', 'name'  %><br/>
  
  <label for="page_body"><%=_ 'Body' %></label><textarea name="page[body]" id="page_body"><%= html_encode(@page.body) %></textarea><br/>
  <!--[eoform:page]-->
  <label>&nbsp;</label>
  <%= submit_tag _("Save"), :class => 'nolabel' %><br/>
  
  </td></tr>
  </table>
  <script type="text/javascript" language="javascript" charset="utf-8">
  tinyMCE.execCommand("mceAddControl", true, "page_body");
  </script>
<% end -%>
