<fieldset id="new_file" class="basic">
<legend><%=_ 'Upload New File' %></legend>

<%= form_tag(project_files_upload_path, {:multipart => true, :id => "file_upload_form"} ) do |f| %>
  <%= render :partial => "form" %>
  <label>&nbsp;</label>
  <div class="buttons">
  <%= submit_tag _("Upload"), :class => "nolabel" %>
    <div style="float:left;padding-top:0.4em;padding-right:0.5em;" class="optional"> <%= _("or") %></div>
    <div style="float:left;padding-top:0.2em;padding-right:0.5em;"><%= link_to_function _("Cancel"), "jQuery('#inline_form').hide()" %></div>
  </div>
<% end %>
<br/>
</fieldset>
