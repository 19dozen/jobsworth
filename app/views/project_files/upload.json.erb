<% unless @valid %>
{
    "status": "error",
    "message": <%= (render(:partial => "layouts/flash.html.erb", :locals => {:message => @message }).to_json) %>
}
<% else %>
{
    "status": "success",
    <% p = [] -%>
    <% @project_files.each do |project_file| -%>
      <%  p += [:id => project_file.id, :html => render(:partial => "project_files/file_cell.html.erb", :locals => {:project_files => project_file})] -%>
    <% end %>
    "message": <%= p.to_json %>
}
<% end %>